<Window x:Class="PassNester.AddCollectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Collection" Height="200" Width="350" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <StackPanel Margin="20">
        <TextBlock Text="Collection Name:" Margin="0,0,0,5"/>
        <TextBox x:Name="NameBox" Margin="0,0,0,10"/>
        <TextBlock Text="Color (hex):" Margin="0,0,0,5"/>
        <TextBox x:Name="ColorBox" Text="#00D6FF" Margin="0,0,0,10"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Width="70" Margin="0,0,10,0" IsDefault="True" Click="Ok_Click"/>
            <Button Content="Cancel" Width="70" IsCancel="True"/>
        </StackPanel>
    </StackPanel>
</Window>
<Window x:Class="PassNester.AddEntryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Entry"
        Height="250" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#252525"
        WindowStyle="None"
        AllowsTransparency="True">
    <Border Background="#252525" CornerRadius="12" Padding="24">
        <StackPanel>
            <TextBlock Text="Key" Foreground="White" FontSize="16" Margin="0,0,0,8"/>
            <TextBox x:Name="KeyBox"
                     FontSize="16"
                     Background="#1A1A1A"
                     Foreground="White"
                     BorderBrush="#474747"
                     BorderThickness="1"
                     Margin="0,0,0,16"
                     Padding="6,2"/>
            <TextBlock Text="Value" Foreground="White" FontSize="16" Margin="0,0,0,8"/>
            <TextBox x:Name="ValueBox"
                     FontSize="16"
                     Background="#1A1A1A"
                     Foreground="White"
                     BorderBrush="#474747"
                     BorderThickness="1"
                     Margin="0,0,0,16"
                     Padding="6,2"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
                <Button Content="OK" Width="80" Height="32" Margin="0,0,12,0"
                        Background="#272727" Foreground="White" BorderBrush="#474747"
                        BorderThickness="1" FontWeight="SemiBold" Click="Ok_Click"/>
                <Button Content="Cancel" Width="80" Height="32"
                        Background="#272727" Foreground="White" BorderBrush="#474747"
                        BorderThickness="1" FontWeight="SemiBold" IsCancel="True"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>